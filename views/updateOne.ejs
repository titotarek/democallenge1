<%-include('./components/header')  %> 


<form  action="/update-all/<%= user.id %> " method="POST">
	<div class="form-group">
	  <label for="exampleInputEmail1">title</label>
	  <input name="title" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"  value="<%= user.title %> " >
	  <div class="container">
		<%	if (errors && errors.title){ %> 
			<span class="warning"><%=errors.title  %>  </span> 
	      <%}  %> 
	   </div>

		</div>
	
	<div class="form-group">
	  <label for="exampleInputPassword1">Article</label>
	  <input name="article" type="text" class="form-control" id="exampleInputPassword1" value="<%= user.article %>" >

	  <div class="container">
	<%	if (errors && errors.article){ %> 
		<span class="warning"><%=errors.article  %>  </span> 
      <%}  %> 
   </div>

		</div>
	
	<button type="submit" class="btn btn-primary">Submit</button>
      </form>

